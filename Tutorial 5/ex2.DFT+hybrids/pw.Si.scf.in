&control
    calculation='scf'
    restart_mode='from_scratch',
    prefix='Si'
    pseudo_dir = '../../../pseudo'
    outdir='./tmp/'
    verbosity='high'
 /                                              
 &system
    ibrav = 2,
    celldm(1) = 10.20,
    nat = 2, 
    ntyp = 1,
